<!-- Assign Student to Course view.
-->

@Html.AntiForgeryToken()

<div class="add-student-to-course center">
    <h1 class="">Add Student to Course</h1>
    <form asp-controller="Student" asp-action="AssignToCourse" method="post">
        <label>
            Student<br />
            <select name="studentId">
                <partial name="~/Views/PartialViews/_personSelectPartial.cshtml" />
            </select>
        </label><br />
        <label>
            Course<br />
            <select name="courseId">
                <partial name="~/Views/PartialViews/_courseSelectPartial.cshtml" />
            </select>
        </label>
        <br />
        <input type="submit" value="Submit" />
    </form>
</div>