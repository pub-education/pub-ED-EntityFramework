@Html.AntiForgeryToken()
@model EntityFramework.Models.DataFunctions;

<div class="page-wrapper">
    <h1 class="">@ViewData["PageHead"]</h1>
    <div class="add-student">
        <form asp-controller="Student" asp-action="Add" method="post">
            <partial name="~/Views/PartialViews/_inputPersonPartial.cshtml" />
        </form>
    </div>
    <div class="student-records">
        <h1 class="">Student Records</h1>
        <table>
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                </tr>
            </thead>
            <tbody>
                <partial name="~/Views/PartialViews/_personTableListPartial.cshtml" />
            </tbody>
        </table>
    </div>
</div>