// Add Assignment view.

@Html.AntiForgeryToken()
@model EntityFramework.Models.DataFunctions;
@{
    List<Assignment> items = (List<Assignment>)ViewData["AssignmentList"];
}

<div class="page-wrapper">
    <h1 class="">@ViewData["PageHead"]</h1>
    <div class="add-student">
        <form asp-controller="Course" asp-action="AddAssignment" method="post">
            <div class="input-wrapper">
                <label>Course Name<br /><input class="input-name" name="name" type="text" placeholder="Assignment" /></label>
            </div>
            <div class="button-wrapper">
                <input type="submit" value="Submit" />
                <input type="reset" value="Clear" />
            </div>
        </form>
    </div>
    <div class="student-records">
        <h1 class="">Assignments</h1>
        <table>
            <thead>
                <tr>
                    <th>Assignment</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Assignment item in items)
                {
                    <tr>
                        <td>@item.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>